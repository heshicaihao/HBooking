<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/route_drive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/route_drive_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/route_drive_normal" />

            <TextView
                android:id="@+id/route_drive_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/drive_car"
                android:textColor="@color/order_text_color_f"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_walk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/route_walk_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/route_walk_normal" />

            <TextView
                android:id="@+id/route_walk_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/walk"
                android:textColor="@color/order_text_color_f"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/route_bus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/route_bus_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/route_bus_normal" />

            <TextView
                android:id="@+id/route_bus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/bus"
                android:textColor="@color/order_text_color_f"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
