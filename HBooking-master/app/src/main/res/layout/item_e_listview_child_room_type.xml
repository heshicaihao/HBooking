<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/main_margin"
    android:paddingRight="@dimen/main_margin"
    android:background="@color/expandable_listview_child_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/child_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="这是子item"
            android:textColor="@color/text_color_black_b"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/child_room_baseprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是子item"
            android:textColor="@color/text_color_heavy"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/child_room_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="这是子item"
                android:textColor="@color/text_color_gray_a"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/child_room_rate_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:text="@string/room_details"
                android:textColor="@color/text_color_heavy"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/child_booking_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/text_color_heavy"
            android:paddingBottom="@dimen/main_margin"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="@dimen/main_margin"
            android:text="@string/booking"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <include layout="@layout/view_line" />
</LinearLayout>
