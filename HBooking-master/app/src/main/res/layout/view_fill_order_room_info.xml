<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fill_order_room_info_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/room_type_and_num"
        android:textColor="@color/order_text_color_b"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="11dp">

        <TextView
            android:id="@+id/room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="高级大床房"
            android:textColor="@color/order_text_color_c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="35dp"
            android:text="1间"
            android:textColor="@color/order_text_color_c"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/edit_more_width"
            android:layout_height="@dimen/edit_more_width"
            android:layout_marginLeft="46dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_pen" />

    </LinearLayout>
</LinearLayout>
